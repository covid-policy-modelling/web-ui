{
  "repository": {
    "url": "https://github.com/covid-policy-modelling/web-ui"
  },
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='-r next-logger' next",
    "build": "next build",
    "start": "NODE_OPTIONS='-r next-logger' next start",
    "lint-staged": "lint-staged",
    "lint": "eslint \"./**/*.{ts,tsx}\" --ignore-pattern node_modules",
    "fix": "eslint \"./**/*.{ts,tsx}\" --ignore-pattern node_modules --fix",
    "test": "jest",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand --watch --all",
    "test-api": "dredd --header=\"Authorization: Bearer $(cat .dredd.auth)\""
  },
  "license": "MIT",
  "dependencies": {
    "@azure/storage-blob": "^12.10.0",
    "@covid-policy-modelling/api": "^0.17.1",
    "@hapi/joi": "^17.1.1",
    "@react-spring/web": "^9.4.5",
    "@types/mysql": "^2.15.21",
    "@types/swagger-ui-react": "^3.35.3",
    "axios": "^0.21.4",
    "classnames": "^2.3.1",
    "cleave.js": "^1.6.0",
    "cookies": "^0.8.0",
    "d3": "^6.7.0",
    "debug": "^4.3.4",
    "emoji-flags": "^1.3.0",
    "filenamify-url": "^2.1.2",
    "is-plain-object": "^5.0.0",
    "jsen": "^0.6.6",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "luxon": "^1.28.0",
    "mysql2": "^2.3.3",
    "next": "^11.0.0",
    "next-logger": "^2.2.0",
    "numbro": "^2.3.6",
    "react": "^17.0.0",
    "react-dimensions-hook": "^1.0.3",
    "react-dom": "^17.0.0",
    "source-map-support": "^0.5.21",
    "sql-template-strings": "^2.2.2",
    "swagger-ui-react": "~4.8.0",
    "swr": "^1.0.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@openapi-contrib/json-schema-to-openapi-schema": "^2.1.1",
    "@types/classnames": "^2.3.1",
    "@types/cleave.js": "^1.4.6",
    "@types/cookie": "^0.3.3",
    "@types/cookies": "^0.7.7",
    "@types/d3": "^6.7.0",
    "@types/debug": "^4.1.7",
    "@types/emoji-flags": "^1.3.0",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^25.2.3",
    "@types/jsen": "0.0.21",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/luxon": "^1.27.1",
    "@types/node": "^12.20.52",
    "@types/react": "^16.14.26",
    "@types/react-dom": "^16.9.16",
    "@typescript-eslint/eslint-plugin": "~2.23.0",
    "@typescript-eslint/parser": "~2.23.0",
    "JSONStream": "^1.3.5",
    "ajv-cli": "^3.3.0",
    "autoprefixer": "^9.8.8",
    "babel-plugin-inline-react-svg": "^1.1.2",
    "csvjson": "^5.1.0",
    "db-migrate": "^0.11.13",
    "db-migrate-mysql": "^2.2.0",
    "envfile": "^5.2.0",
    "eslint": "~6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "~7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.3.8",
    "i18n-iso-countries": "^5.5.0",
    "jest": "^25.5.4",
    "js-yaml": "^3.14.1",
    "js-yaml-loader": "^1.2.2",
    "lint-staged": "^10.5.4",
    "now": "^19.2.0",
    "postcss": "^8.4.13",
    "postcss-cli": "^7.1.2",
    "postcss-import": "^12.0.1",
    "prettier": "^1.19.1",
    "prompts": "^2.4.2",
    "source-map": "^0.7.3",
    "swagger-inline": "^4.2.2",
    "tailwindcss": "^1.9.6",
    "ts-json-schema-generator": "^0.67.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.6.0",
    "yaml-jest": "^1.2.0",
    "yargs": "^15.4.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "plugin:react-hooks/recommended"
    ],
    "ignorePatterns": [
      "migrations/*.js"
    ],
    "parserOptions": {
      "jsx": true,
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "react/react-in-jsx-scope": 0,
      "react/prop-types": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-empty-interface": 1,
      "@typescript-eslint/interface-name-prefix": 1,
      "@typescript-eslint/no-inferrable-types": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "@typescript-eslint/camelcase": [
        2,
        {
          "properties": "never"
        }
      ],
      "@typescript-eslint/no-use-before-define": [
        2,
        {
          "functions": false
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged && npx tsc --noEmit"
    }
  },
  "lint-staged": {
    "./**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "semi": false,
    "bracketSpacing": false
  },
  "bugs": {
    "url": "https://github.com/covid-policy-modelling/web-ui/issues"
  }
}
